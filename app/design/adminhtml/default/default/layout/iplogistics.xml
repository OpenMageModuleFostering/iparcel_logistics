<layout>
    <adminhtml_system_config_edit>
        <reference name="head">
            <action method="addJs">
                <name>iparcel-logistics/adminhtml/shipping-methods.js</name>
            </action>
        </reference>
    </adminhtml_system_config_edit>
    <adminhtml_iplogistics_shipment_split>
        <reference name="content">
            <block type="iplogistics/adminhtml_iplogistics_shipment_split" name="iplogistics_shipment_split">
                <block type="iplogistics/adminhtml_iplogistics_shipment_split_form" name="form" template="iplogistics/shipment/split/form.phtml">
                    <block type="adminhtml/sales_order_shipment_create_items" name="shipment_items" template="iplogistics/shipment/split/items.phtml">
                        <action method="addItemRender"><type>default</type><block>adminhtml/sales_items_renderer_default</block><template>iplogistics/shipment/split/renderer/default.phtml</template></action>
                        <action method="addColumnRender"><column>qty</column><block>adminhtml/sales_items_column_qty</block><template>sales/items/column/qty.phtml</template></action>
                        <action method="addColumnRender"><column>name</column><block>adminhtml/sales_items_column_name</block><template>sales/items/column/name.phtml</template></action>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_iplogistics_shipment_split>
</layout>
